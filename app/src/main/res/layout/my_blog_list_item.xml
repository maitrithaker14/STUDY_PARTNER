<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">



            <TextView
                android:id="@+id/text_View_username_my_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/mai"

                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/text_View_time_blog_item"
                app:layout_constraintTop_toTopOf="@id/text_View_time_blog_item"
                tools:text="Username" />

            <TextView
                android:id="@+id/text_View_time_blog_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@id/text_View_username_blog_item"
                app:layout_constraintTop_toBottomOf="@id/text_View_username_blog_item"
                tools:text="Time"
                tools:ignore="NotSibling" />

            <ImageView
                android:id="@+id/image_view_delete_my_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_View_username_my_blog"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/text_View_description_blog_item"

                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:padding="7dp"
                android:textColor="@color/pink"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/text_View_username_my_blog"
                app:layout_constraintStart_toStartOf="@id/text_View_username_my_blog"
                app:layout_constraintTop_toBottomOf="@id/text_View_username_my_blog"
                tools:text="Description..." />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>